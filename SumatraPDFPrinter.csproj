<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageId>SumatraPDFPrinter</PackageId>
    <Version>1.0.6</Version>
    <Authors>Lucas Godoy</Authors>
     <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description>Package for printing PDFs with SumatraPDF</Description>
    <ImplicitUsings>enable</ImplicitUsings>
    <IncludeContentInPack>true</IncludeContentInPack>
    <ContentTargetFolders>content</ContentTargetFolders>
    <PackageLicenseExpression>EPL-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/lucasgweb/SumatraPDFPrinter</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
  <None Include="README.md" Pack="true" PackagePath="\"/>
    <Content Include="SumatraPDF.exe" PackagePath="content\SumatraPDF.exe" />
    <Content Include="build\SumatraPDFPrinter.targets" PackagePath="build\SumatraPDFPrinter.targets" />
  </ItemGroup>

</Project>
